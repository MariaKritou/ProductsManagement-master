@model User
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Profile" asp-action="PostEdit">
  
    <input type="hidden" name="id" value="@Model.id">
 
  <div class="form-group">
    <label for="description">@Html.DisplayNameFor(p => p.firstName)</label>
    <input type="text" class="form-control" asp-for="@Model.firstName">
    <span asp-validation-for="firstName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="price">@Html.DisplayNameFor(p => p.lastName)</label>
    <input type="text" class="form-control" asp-for="@Model.lastName">
    <span asp-validation-for="lastName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="price">@Html.DisplayNameFor(p => p.age)</label>
    <input type="text" class="form-control" asp-for="@Model.age">
    <span asp-validation-for="age" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>